{
  "name": "ngmastery",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run serve && npm run browse:dev",
    "serve": "ng serve --host 0.0.0.0 --port 4229 --disableHostCheck",
    "browse:dev": "gixb http://localhost:4229",
    "build:docs": "ng build --prod --output-path docs --base-href /ngmastery/docs && cp docs/index.html docs/404.html ",
    "build:subapp": "./build-sub-app",
    "commit:docs": "git add docs/* ;  git commit docs -m \"docs updated\" && git push",
    "release:docs": "npm run build:docs && npm run commit:docs",
    "browse:release": "gixb https://jgwill.github.io/ngmastery/",
    "browse:repo": "gixb https://github.com/jgwill/ngmastery/",
    "adm:bak:files:dropbox": "mv node_modules ..; echo Backing up files starting ; tar czf /z/Backups/DTS/x/hu.x.ngmastery.190319.root.tar.gz .  && ginol \"NGMastery Backing up on Dropbox done\" ; mv ../node_modules .",
    "backup": "npm run adm:bak:files:dropbox",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/cdk": "~7.3.5",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
